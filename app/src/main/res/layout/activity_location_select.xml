<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SchoolFees.SchoolLocationDir.LocationSelect"
        android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="@dimen/length_20dp"
                    >

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/current_location"
                android:drawableLeft="@drawable/ic_my_location_blue_24dp"
                android:drawablePadding="@dimen/length_10dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

        <View android:id="@+id/line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/length_1dp"
              android:background="@color/dark_grey"
              android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/location_recycler_view"
            android:layout_marginStart="@dimen/length_20dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>