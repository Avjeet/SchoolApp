<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/length_10dp"
        android:background="@color/white">

    <ImageView android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/blg_image"
               android:scaleType="fitXY"
               android:background="@color/white"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/blog_title_margin"
              android:textSize="16sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:text="There are many variations of passages of Lorem Ipsum available"
              android:maxLines="2"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:lines="2"
              android:ellipsize="end"
              android:layout_marginEnd="@dimen/blog_title_margin"
              android:layout_marginStart="@dimen/blog_title_margin"
              android:layout_marginBottom="@dimen/blog_title_margin"
              android:textColor="@color/dark_grey_text"
              android:text="There are many variations of passages of Lorem Ipsum avail, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on"/>

    <View android:layout_width="match_parent" android:layout_height="@dimen/length_1dp"
          android:background="@color/grid_sep_color_grey"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Read More>>>"
              android:paddingRight="@dimen/length_5dp"
              android:textColor="@color/colorAccent"
              android:gravity="end|center_vertical"
              android:minHeight="0dp"
              android:layout_marginTop="@dimen/length_5dp"
              android:layout_marginBottom="@dimen/length_5dp"/>
</LinearLayout>
