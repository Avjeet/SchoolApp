<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/promocode_left_padding"
                android:paddingBottom="@dimen/promocode_left_padding"
                android:paddingEnd="@dimen/promocode_left_padding">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="PROMOCODE: FEE10"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:textSize="16sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Nov 20 - Nov 30"

                  android:textSize="16sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Get a 10% cashback on paying fees"
                  android:textSize="12sp"
                  android:textColor="@color/dark_grey_text"/>
    </LinearLayout>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Apply"
            android:id="@+id/repeat_tran_btn"
            android:layout_below="@id/last_tran_amt"
            android:textAllCaps="false"
            android:minHeight="0dp"
            android:background="@drawable/btn_stroke_blue"
            android:paddingStart="@dimen/length_20dp"
            android:minWidth="0dp"
            android:paddingEnd="@dimen/length_20dp"
            android:paddingTop="3dp"
            android:textSize="16sp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorAccent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
    />
</RelativeLayout>