<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
android:layout_margin="@dimen/length_10dp">


    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:src="@drawable/profile_01"
                android:layout_margin="@dimen/length_20dp"/>

        <View android:layout_width="50dp" android:layout_height="1dp"
              android:background="@color/dark_grey"

              android:layout_gravity="center_horizontal"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:text="JKG School"
                  android:gravity="center_horizontal"
                  android:layout_margin="@dimen/length_30dp"/>


    </LinearLayout>

</android.support.v7.widget.CardView>